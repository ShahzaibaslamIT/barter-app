generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// Enums
//
enum UserType {
  service_provider
  item_owner
  both
}

enum ListingType {
  item
  service
}

//
// User Model
//
model User {
  user_id       Int       @id @default(autoincrement())
  username      String
  email         String    @unique
  password_hash String
  user_type     UserType  @default(both)    // enum for type safety
  phone         String?                     // optional
  location_text String?                     // optional
  created_at    DateTime  @default(now())
  listings      Listing[] @relation("UserListings")
}

//
// Listing Model
//
model Listing {
  item_id        Int         @id @default(autoincrement())
  user_id        Int
  type           ListingType                 // item or service
  title          String
  description    String
  category       String
  barter_request String?                     // what user wants in return
  photos         String[]                    // array of image URLs
  condition      String?                     // item condition (new/good/used)
  availability   Json?                       // service availability (JSONB)
  latitude       Float?
  longitude      Float?
  is_active      Boolean     @default(true)
  created_at     DateTime    @default(now())

  user User @relation(fields: [user_id], references: [user_id], name: "UserListings", onDelete: Cascade)

  @@index([user_id])
  @@index([category])
  @@index([created_at])
}
